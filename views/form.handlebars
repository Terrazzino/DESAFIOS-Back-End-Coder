<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Web Socket Form Chat Handlebars</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <script src="/socket.io/socket.io.js"></script>
</head>
<body class="bg-black">
    <div class="container mt-5 mx-auto bg-dark text-white p-4 rounded-3">

        {{!-- FORMULARIO AGREGAR PRODUCTOS --}}
        <h1>Agregue su Producto</h1>
        <form>
            <div class="mb-3">
                <label class="form-label">Nombre del Producto</label>
                <input type="text" class="form-control" id="nombre">
            </div>
            <div class="mb-3">
                <label class="form-label">Precio</label>
                <input type="number" class="form-control" id="precio">
            </div>
            <div class="mb-3">
                <label class="form-label">Imagen del Producto</label>
                <input type="url" class="form-control" id="imagen">
            </div>
            <div class="d-flex justify-content-evenly">
                <button type="submit" id="agregar" class="btn btn-primary">Agregar</button>
                <a class="btn btn-primary" href="http://localhost:8080/productos">Lista de Productos</a>
            </div>
        </form>


        {{!-- LISTA DE PRODUCTOS --}}
        <h2 class="text-warning">Lista de Productos</h2>
        <table class="table bg-black rounded-3">
            <thead>
                <tr>
                    <th class="col-3 text-start text-light" scope="col">Producto</th>
                    <th class="col-3 text-center text-light" scope="col">Precio</th>
                    <th class="col-3 text-center text-light" scope="col">Imagen</th>
                </tr>
            </thead>
            <tbody id="productsList">
            </tbody>
        </table>



        {{!-- CHAT --}}
        <h2 class="text-success">Mensajer√≠a</h2>
        <form class="mb-5">
            <div id="mensajes" class="form-control mb-2"></div>
            <input type="email" required="true" id="username" class="form-control mb-2" placeholder="Nombre de Usuario">
            <input type="text" id="mensaje" class="form-control mb-2" placeholder="Escriba su mensaje">
            <br>
            <input type="submit" id="enviar" class="form-control mb-2 bg-success text-light" value="Enviar">
        </form>


    </div>
</body>
<script src="./index.js"></script>
</html>